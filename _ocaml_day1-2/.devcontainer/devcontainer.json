{
  "name": "Ocaml",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "remoteUser": "opam",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true,
    "ocaml-formatter.profile": "janestreet",
  },
  "extensions": [
    "freebrocolo.reasonml",
    "badochov.ocaml-formatter"
  ]
}
